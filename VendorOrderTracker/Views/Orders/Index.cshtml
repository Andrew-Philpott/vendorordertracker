@using VendorOrderTracker.Models; 

@{ Layout = "_Layout"; }

<div class="jumbotron">
  <h1>Orders</h1>
</div>

@if (Model.Count == 0) {
<h2>You don't have any vendors yet</h2>
<a href="/vendors/new">Add Vendor</a>
} else { 

@foreach (Order order in @Model.GetAllOrders()) {
<div class="order-item">
  <h2>@order.Title</h2>
  <h2>@order.Date</h2>
  <h2>@order.Description</h2>
  <h2>@order.Price</h2>
</div>
}
}

<a href="/vendors">View Vendors</a>
<br>
<a href="/home">Home</a>
