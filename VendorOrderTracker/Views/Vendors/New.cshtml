@model VendorOrderTracker.Models.Vendor;


@{ Layout = "_Layout"; }

<div class="jumbotron">
  <h2>Add a vendor</h2>
</div>

@using (Html.BeginForm("New", "Vendors", FormMethod.Post, new { id = "myForm" }))
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br>
  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description)
  <br>
  @Html.LabelFor(model => model.Type)
  @Html.TextBoxFor(model => model.Type)
  <div id="goods"></div>
 <input id="vendor-button" type="submit" value="Add new vendor" class="btn btn-default" />
}
<div class="links">
  <a href="/vendors">View Vendors</a>
  <a href="/">Home</a>
</div>
 <input id="number-input" type="text" value="Add new vendor"/>
<button id="baked-goods-count">Number of baked goods</button>