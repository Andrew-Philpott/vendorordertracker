@using VendorOrderTracker.Models; 

@{ Layout = "_Layout"; }

<div class="jumbotron">
  <h1>@Model.Name</h1>
</div>

<h1>Add order</h1>
<form action="/vendors/@Model.Id/orders" method="post">
  <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
  <div class="form-group">
    <label for="title"></label>
    <input id="title" name="title" type="text">
  </div>
  <div class="form-group">
    <label for="description"></label>
    <input id="description" name="description" type="text">
  </div>
@foreach (BakedGood bakedGood in Model.BakedGoods)
{
  <div class="form-group">
    <label for="@bakedGood.GetType().Name"></label>
    <input id="@bakedGood.GetType().Name" name="@bakedGood.GetType().Name" type="text">
  </div>
}
<button type="submit">Add Order</button>
</form>


<a href="/vendors">View Vendors</a>